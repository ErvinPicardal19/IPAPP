pipeline {
    agent { 
        node {
            label 'IPAPP-DOCKER-AGENT-PYTHON'
            }
      }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            parallel {
               stage('Build') {
                  steps {
                     echo 'Building Repo and installing dependencies'
                     sh '''
                     pip install -r requirements.txt
                     '''
                  }
               }
            }
        }
        stage('Test') {
            steps{
               echo 'Testing....'
               sh '''
               python3 test.py
               '''
            }
         }
        stage('Deploy') {
            parallel{
                stage('Deploy'){
                    steps {
                        echo 'Deploying the application....'
                        sh "python3 server.py"
                    }
                }
            }
        }
    }
    post {
        success {
            echo "Flask Application Up and running!!"
        }
        failure {
            echo 'Build stage failed'
            error('Stopping earlyâ€¦')
        }
      }
}