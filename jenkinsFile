pipeline {
    agent { 
        node {
            label 'IPAPP-DOCKER-AGENT-PYTHON'
            }
      }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            parallel {
               stage('Build') {
                  steps {
                     echo 'Building Repo and installing dependencies'
                     sh '''
                     pip install -r requirements.txt
                     '''
                  }
               }
            }
        }
        stage('Test') {
            steps{
               echo 'Testing....'
               sh '''
               python3 test.py
               '''
            }
         }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}