pipeline {
    agent { 
        node {
            label 'IPAPP-DOCKER-AGENT-PYTHON'
            }
      }
    triggers {
        pollSCM 'H * * * *'
    }
    stages {
        stage('Build') {
            parallel {
               stage('Build') {
                  steps {
                     echo 'Building Repo and installing dependencies'
                     sh '''
                     pip install -r requirements.txt
                     '''
                  }
               }
            }
        }
        stage('Test') {
            steps{
               echo 'Testing....'
               sh '''
               python3 test.py
               '''
            }
         }
        stage('Deploy') {
            steps {
                echo 'Deploying the application....'
                sh "sudo nohup python3 server.py > log.txt 2>&1 & sleep 1"
            }
        }
    }
    post {
        success {
            echo "Flask Application Up and running!!"
        }
        failure {
            echo 'Build stage failed'
            error('Stopping earlyâ€¦')
        }
      }
}