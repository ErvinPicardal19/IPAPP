def buildResults = [:]

pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages {
            script {
                    def jobBuild = build job: 'DEPLOY_IPAPP', propagate: false

                    def jobResult = jobBuild.getResult()

                    echo "Build of 'testJob' returned result: ${jobResult}"

                    buildResults['DEPLOY_IPAPP'] = jobResult

                    if (jobResult != 'SUCCESS') {
                        error("DEPLOY_IPAPP failed with result: ${jobResult}")
                    } else {
                        sh 'docker stop samplerunning'
                        sh 'docker rm samplerunning'
                    }
                }
            }
            
        stage('Build') {
            steps {
                echo 'Installing dependencies'
                build "Build_IPAPP"
            }
        }
        stage('Test') {
            steps{
               echo 'Testing....'
               build "TEST_IPAPP"
            }
         }
        stage('Deploy') {
            steps {
                echo 'Deploying the application....'
            }
        }
    }
    post {
        success {
            build "DEPLOY_IPAPP"
            echo "Flask Application Up and running!!"
        }
        failure {
            echo 'Build stage failed'
            error('Stopping earlyâ€¦')
        }
      }
}